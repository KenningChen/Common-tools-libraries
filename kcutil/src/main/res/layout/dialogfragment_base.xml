<?xml version="1.0" encoding="utf-8"?>
<com.kenning.kcutil.widget.basicview.BackGroundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bgradius="5dp"
    android:id="@+id/main"
    app:normalBackgroundColor="@color/white"
    android:orientation="vertical">

    <com.kenning.kcutil.widget.basicview.BackGroundTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/color_333333"
        android:padding="10dp"
        app:top_left_radius="5dp"
        app:top_right_radius="5dp" />

    <LinearLayout
        android:id="@+id/layoutBody"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f8f8ff" />

        <LinearLayout
            android:id="@+id/layoutBottomButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"/>
    </LinearLayout>
</com.kenning.kcutil.widget.basicview.BackGroundLinearLayout>