<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_15">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前未安装语音引擎，系统将无法播报货位、品名等。
请点击【立即安装】，根据向导完成语音引擎安装。"
        android:textColor="#1E2125"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注：播报测试需等待引擎启动，延迟播报为正常现象；播报成功后，后续不存在延迟情况。"
        android:textColor="#dc143c"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kenning.kcutil.widget.basicview.BackGroundTextView
            android:id="@+id/tvClose"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:gravity="center"
            android:text="关 闭"
            android:textColor="#778899"
            android:textSize="@dimen/sp_13" />

        <com.kenning.kcutil.widget.basicview.BackGroundTextView
            android:id="@+id/tvSpeak"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:gravity="center"
            android:text="播报测试"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:bgradius="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:pressedBackgroundColor="#7fff00"
            app:normalBackgroundColor="#32cd32" />

        <com.kenning.kcutil.widget.basicview.BackGroundTextView
            android:id="@+id/tvDownload"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginVertical="@dimen/dp_10"
            android:gravity="center"
            android:text="立即下载"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:bgradius="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:normalBackgroundColor="#2F71FD" />
    </LinearLayout>




</LinearLayout>